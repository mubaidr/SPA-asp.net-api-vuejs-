{
  "root": true,
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module"
  },
  "extends": ["airbnb", "plugin:vue/essential", "prettier"],
  "rules": {
    "space-before-function-paren": [
      "error",
      { "anonymous": "never", "named": "always", "asyncArrow": "never" }
    ],
    "linebreak-style": "off",
    "no-underscore-dangle": "off",
    "no-console": "off"
  },
  "globals": {
    "document": true,
    "window": true,
    "swal": true
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "build/webpack.base.conf.js"
      }
    }
  }
}
